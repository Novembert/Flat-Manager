rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
    }
    match /bills/{bill} {
      allow get, list, create, update, delete: if true
    }
    match /cleanings/{cleaning} {
      allow get, list, create, update, delete: if true
    }
    match /visits/{visit} {
      allow get, list, create, update, delete: if true
    }
    match /alerts/{alert} {
      allow get, list, create, update, delete: if true
    }
    match /counter/{collection} {
      allow get, list, create, update, delete: if true
    }
  }
}